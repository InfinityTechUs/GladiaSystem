@model GladiaSystem.Models.Product
@{
    Layout = "~/Views/Shared/_LayoutEcommerce.cshtml";
    ViewBag.Title = "Home";
    List<GladiaSystem.Models.Product> products = ViewBag.AllProduct;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Home - Dom Tchochoro</title>
    <link href="~/Content/PartialsEcommerce/Home.css" rel="stylesheet" />
    <link href="~/Content/rootE.css/" rel="stylesheet">
    <link href="~/Content/PartialsEcommerce/lightslider.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;400;500;700;800&display=swap" rel="stylesheet">
    @Scripts.Render("~/Scripts/lightslider.js")
</head>
<body>
    <div class="slider">
        <div class="myslide fade">
            <img class="banner-desktop" src="../Content/Imagens/Dog-banner-desktop.svg" style="width: 100%; height: 100%;">
            <img class="banner-mobile" src="../Content/Imagens/Dog-banner-mobile.png" style="width: 100%; height: 100%;">
        </div>

        <div class="myslide fade">
            <img class="banner-desktop" src="../Content/Imagens/Cat-banner-desktop.svg" style="width: 100%; height: 100%;">
            <img class="banner-mobile" src="../Content/Imagens/Cat-banner-mobile.png" style="width: 100%; height: 100%;">
        </div>

        <div class="myslide fade">
            <img class="banner-desktop" src="../Content/Imagens/Truck-banner-desktop.svg" style="width: 100%; height: 100%;">
            <img class="banner-mobile" src="../Content/Imagens/Truck-banner-mobile.png" style="width: 100%; height: 100%;">
        </div>

        <a class="prev" onclick="javascript:plusSlides(-1)">
            &#10094;
        </a>

        <a class="next" onclick="javascript:plusSlides(1)">
            &#10095;
        </a>
    </div>
    <div class="container">
        <ul class="flex-features">
            <li class="flex-item">
                <img src="../Content/Imagens/shield-off.svg" alt="" class="itens-icon">
                <span class="flex-title">Pagamento rápido e seguro</span>
            </li>
            <li class="flex-item">
                <img src="../Content/Imagens/truck.svg" alt="" class="itens-icon">
                <span class="flex-title">Entragas <span class="broken-line">rápidas</span></span>
            </li>
            <li class="flex-item">
                <img src="../Content/Imagens/package.svg" alt="" class="itens-icon">
                <span class="flex-title">Frete Grátis</span>
            </li>
        </ul>
    </div>


    <div class="header-title container">
        <h1 class="first-title">Comida para seu pet</h1>
        <a href="@Url.Action("Search", "HomeEcommerce")">
            <p class="arrow-text">Confira mais <img src="../Content/Imagens/blueArrow.svg" alt="Alternate Text" class="size" /></p>
        </a>
    </div>

    <div class="container">
        <ul id="autoWidth" class="cs-hidden">
            <!--slider------------------->
            @foreach (GladiaSystem.Models.Product item in products)
            {
                <li class="item-a">
                    <!--slider-box-->
                    <div class="card">
                        <div class="card-body">
                            <img src="@item.img" class="img-responsive " alt="">
                            <div class="card-body">
                                <p class="card-text">@item.Name </p>
                                <p class="card-price"><b>$ @item.Price</b></p>
                                <div class="card-footer">
                                    <a href="@Url.Action("ProductSelected", "HomeEcommerce", new {@class = " btn-primary", ProductID = item.ID })" class="btn-primary">Ver produto</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>

    <div class="header-title container">
        <h1 class="first-title">Itens indicados</h1>
        <a href="@Url.Action("Search", "HomeEcommerce")">
            <p class="arrow-text">Confira mais <img src="../Content/Imagens/blueArrow.svg" alt="Alternate Text" class="size" /></p>
        </a>
    </div>

    <section class="section-container container">
        <ul class="flex-banners">
            <li class="banner-item">
                <div class="banner-image"><img class="banner-picture" src="../Content/Imagens/racoes.png" alt=""></div>
                <div class="banner-info">
                    <h3 class="banner-title">Comida</h3>
                    <p class="banner-content">
                        Quem tem pet em casa sabe a necessidade de oferecer
                        uma execelente alimentação para manter a saúde de seu
                        pet em dia
                    </p>
                    @{
                        string food = "Comida";
                        string toys = "Brinquedos";
                        string meds = "Medicamentos";
                        string hygiene = "Higiene";
                    }
                    <a href="@Url.Action("Search", "HomeEcommerce")">
                        <p class="banner-link">Comprar aqui<img class="miniArrow" src="../Content/Imagens/minibannericon.png" alt=""></p>
                    </a>
                </div>
                <a href="@Url.Action("Search", "HomeEcommerce" , new { categoryFilter =  food})" class="full-link"></a>
            </li>
            <li class="banner-item">
                <div class="banner-image"><img class="banner-picture" src="../Content/Imagens/Medicamentos.png" alt=""></div>
                <div class="banner-info">
                    <h3 class="banner-title">Medicamentos</h3>
                    <p class="banner-content">
                        Nós sabemos o quão prazero é garantir saúde, e a felicidade
                        de seu pet. Por esse motivo nada é mais saúdavel 
                        do que medicamentos de boa qualidade
                    </p>
                    <a href="@Url.Action("Search", "HomeEcommerce")">
                        <p class="banner-link">Comprar aqui<img class="miniArrow" src="../Content/Imagens/minibannericon.png" alt=""></p>
                    </a>
                </div>
                <a href="@Url.Action("Search", "HomeEcommerce" , new { categoryFilter = meds})" class="full-link"></a>
            </li>
        </ul>
    </section>

    <div class="header-title container">
        <h1 class="first-title">Acessorios para o seu pet</h1>
        <a href="@Url.Action("Search", "HomeEcommerce")">
            <p class="arrow-text">Confira mais <img src="../Content/Imagens/blueArrow.svg" alt="Alternate Text" class="size" /></p>
        </a>
    </div>


    <div class="container">
        <ul class="container-grid">
            <li class="item a">
                <a href="@Url.Action("Search", "HomeEcommerce")">
                    <img class="image-grid" src="../Content/Imagens/teste2.png" alt="Antipulgas">
                </a>
            </li>
            <li class="item b">
                <a href="@Url.Action("Search", "HomeEcommerce")">
                    <img class="image-grid" src="../Content/Imagens/teste2.png" alt="Antipulgas">
                </a>
            </li>
            <li class="item c">
                <a href="@Url.Action("Search", "HomeEcommerce")">
                    <img class="image-grid" src="../Content/Imagens/teste.png" alt="Imagem">
                </a>
            </li>
        </ul>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/scripts.js")
</body>
</html>